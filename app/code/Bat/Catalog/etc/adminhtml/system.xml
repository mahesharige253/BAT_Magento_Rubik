<?xml version="1.0" encoding="UTF-8"?>

<config xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:module:Magento_Config:etc/system_file.xsd">
    <system>
        <tab id="bat_general_config" translate="label" sortOrder="10">
            <label>BAT</label>
        </tab>
        <section id="bat_catalog_section" showInDefault="1" showInWebsite="1" showInStore="1" type="text" translate="Catalog" sortOrder="200">
            <label>Catalog</label>
            <tab>bat_general_config</tab>
            <resource>Bat_Catalog::catalog_product_image_size</resource>
            <group id="general" showInDefault="1" showInStore="1" showInWebsite="1" sortOrder="20">
                <label>Product Image Configuration</label>
                <field id="product_image_width" translate="label" type="text" sortOrder="10" showInDefault="1" showInWebsite="1" showInStore="1" canRestore="1">
                    <label>Product List Page Image Width</label>
                    <validate>required-entry validate-digits</validate>
                </field>
                 <field id="product_image_height" translate="label" type="text" sortOrder="20" showInDefault="1" showInWebsite="1" showInStore="1" canRestore="1">
                    <label>Product List Page Image Height</label>
                    <validate>required-entry validate-digits</validate>
                </field>
                <field id="product_detail_page_image_width" translate="label" type="text" sortOrder="30" showInDefault="1" showInWebsite="1" showInStore="1" canRestore="1">
                    <label>Product Detail Page Image Width</label>
                    <validate>required-entry validate-digits</validate>
                </field>
                <field id="product_detail_page_image_height" translate="label" type="text" sortOrder="40" showInDefault="1" showInWebsite="1" showInStore="1" canRestore="1">
                    <label>Product Detail Page Image Height</label>
                    <validate>required-entry validate-digits</validate>
                </field>
            </group>
        </section>
    </system>
</config>
