<?xml version="1.0" encoding="UTF-8"?>
<form xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:module:Magento_Ui:etc/ui_configuration.xsd">
    <fieldset name="rule_information" sortOrder="10">
        <field name="discount_type_rule" formElement="select">
            <argument name="data" xsi:type="array">
                <item name="options" xsi:type="object">Bat\Discount\Model\Source\DiscountRuleType</item>
                <item name="config" xsi:type="array">
                    <item name="source" xsi:type="string">sales_rule</item>
                </item>
            </argument>
            <settings>
                <dataType>text</dataType>
                <label translate="true">Discount Type Rule</label>
                <dataScope>discount_type_rule</dataScope>
            </settings>
        </field>
        <field name="discount_type_code" formElement="input">
            <argument name="data" xsi:type="array">
                <item name="config" xsi:type="array">
                    <item name="source" xsi:type="string">sales_rule</item>
                    <item name="validation" xsi:type="array">
                        <item name="required-entry" xsi:type="boolean">true</item>
                    </item>
                </item>
            </argument>
            <settings>
                <dataType>text</dataType>
                <label translate="true">Discount Type Code</label>
                <dataScope>discount_type_code</dataScope>
            </settings>
        </field>
    </fieldset>
</form>